{
  "name": "tauri-vue-template",
  "type": "module",
  "version": "0.1.10",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "only-allow pnpm",
    "prepare": "simple-git-hooks",
    "dev:web": "vite",
    "dev:tauri": "tauri dev",
    "build:web": "vue-tsc --noEmit && vite build",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "vue-tsc --build",
    "release": "bumpp",
    "icon": "tauri icon",
    "generate:key": "tauri signer generate -w ./tauri-vue-template.key"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.562.0",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.13",
    "vue-router": "^4.6.4",
    "vue-sonner": "^2.0.9",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@iconify-json/radix-icons": "^1.2.6",
    "@iconify/vue": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^25.0.3",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vue/tsconfig": "^0.8.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "lint-staged": "^15.0.0",
    "npm-run-all2": "^8.0.4",
    "only-allow": "^1.2.2",
    "simple-git-hooks": "^2.9.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^6.0.3",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.2.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        150
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "src/**/*.{vue,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
